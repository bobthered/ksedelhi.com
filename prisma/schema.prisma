// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  comment   String
}

model Donate {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  body     String
  imageSrc String
  subtitle String
  title    String
}

model User {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  email        String @unique
  passwordHash String
}
